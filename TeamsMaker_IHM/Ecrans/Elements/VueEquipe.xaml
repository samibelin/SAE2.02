<UserControl x:Class="TeamsMaker_IHM.Ecrans.Elements.VueEquipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamsMaker_IHM.Ecrans.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="0,0,0,1" BorderBrush="Black">
        <DockPanel Margin="20,20,0,0">
            <TextBlock x:Name="NomEquipe" FontSize="20" DockPanel.Dock="Top"></TextBlock>
            <DockPanel>
                <TextBlock x:Name="Score" DockPanel.Dock="Right" VerticalAlignment="Center" FontSize="75" Margin="0,0,40,0"></TextBlock>
                <StackPanel Orientation="Horizontal" x:Name="PanelPersonnage"></StackPanel>
            </DockPanel>
        </DockPanel>
    </Border>
</UserControl>
